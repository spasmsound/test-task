<div class="row">
    {% for job in jobs %}
        <div class="col-lg-3 col-6">
            <div class="small-box bg-info">
                <div class="inner">
                    <h4><strong>{{ job.title }}</strong></h4>
                    <h5>{{ job.company }}</h5>
                </div>
                <a href="{{ path('app_jobs_show', {'job': job.id}) }}" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
    {% endfor %}
</div>
